[core]
    pager = delta
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    side-by-side = true
[interactive]
    diffFilter = delta --color-only
[user]
    name = Michal Zimmermann
    email = zimmicz@gmail.com
[push]
    default = current
[branch]
    autosetuprebase = always
[core]
    compression = 0
[merge]
    tool = vim
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "vim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[alias]
    a  = add
    aa = add .
    amend = commit --amend --no-edit
    bd = branch -d
    bl = branch --list
    bla = branch --list --all
    bdf = branch -D
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
    cm = commit -m
    co = checkout
    cob = checkout -b
    cof = !sh -c \"git for-each-ref --format='%(refname:short)' refs/heads | fzf | xargs git checkout\"
    comp = !sh -c \"git diff HEAD $1 -- $2\"
    dw = diff --word-diff --ignore-all-space
    dc = diff --word-diff --cached
    f = fetch
    find = "!git log --color -p -S "
    i = init
    la = "!git config -l | grep alias | cut -c 7-"
    sa = stash apply
    sl = "!git stash list --relative-date | head -n 10"
    sp = stash pop
    ss = stash push
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    po = push origin
    plo = pull origin
    rename = branch -m
    rb =  rebase
    rbi = rebase --interactive
    rbi-mergebase = !sh -c \"git rebase -i `git merge-base $1 HEAD`\" -
    review = !sh -c \"git fetch && git checkout origin/$1\"
    wip = "!git diff > $(git rev-parse HEAD)_WIP.patch"
    undo = reset "HEAD^1"
    unstage = reset HEAD
    untracked = ls-files --others --exclude-standard
[init]
    templatedir = ~/.git-templates
[cola]
	spellcheck = false
[status]
    submodulesummary = 1
;[submodule]
;    recurse = true
