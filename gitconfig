[user]
    name = Michal Zimmermann
    email = zimmicz@gmail.com
[push]
    default = current
[branch]
    autosetuprebase = always
[core]
    compression = 0
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[alias]
    a  = add
    aa = add .
    amend = commit --amend --no-edit
    bd = branch -d
    bl = branch --list
    bla = branch --list --all
    bdf = branch -D
    cm = commit -m
    co = checkout
    cob = checkout -b
    cof = !sh -c \"git for-each-ref --format='%(refname:short)' refs/heads | fzf | xargs git checkout\"
    comp = !sh -c \"git diff HEAD $1 -- $2\"
    dw = diff --ignore-all-space
    dc = diff --cached
    f = fetch
    i = init
    la = "!git config -l | grep alias | cut -c 7-"
    sa = stash apply
    sl = "!git stash list --relative-date | head -n 10"
    sp = stash pop
    ss = stash push
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    po = push origin
    plo = pull origin
    rename = branch -m
    rb =  rebase
    rbi = rebase --interactive
    rbi-mergebase = !sh -c \"git rebase -i `git merge-base $1 HEAD`\" -
    wip = "!git diff > $(git rev-parse HEAD)_WIP.patch"
    unstage = reset HEAD
